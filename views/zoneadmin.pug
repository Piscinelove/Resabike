                        th MODIFIER
                        th SUPPRIMER
                tbody
                    each zone in zones
                        tr
                            td= zone.id
                            td= zone.name
                            td
                                a.waves-effect.waves-light.btn.modal-trigger(href="#modalModifyZone", data-id=zone.id, data-name=zone.name)
                                    i.material-icons edit
