    div#zone.section.full-section.container
        h2 Zones
            div.row.center-align
                div.col.s4.right
                    a(href="#modalAddZone").btn-floating.btn-large.waves-effect.waves-light.modal-trigger
                        i.material-icons add
        div.row
            table.centered.highlight.tab-scroll
                thead
                    tr
                        th ID
