    //ADD MODAL ZONE
    div(id="modalAddZone").modal.modal-fixed-footer
        div.modal-content
            h4 Ajouter
            div.row
                form(method='POST', action='/administration/admin')#add-zone-form.col.s12
                    div.row
                        div.input-field.col.s12
                            input(id="zone-name", name="zone_name", type="text").validate
                            label(for="zone-name") Nom
                    div.row
                        div.input-field.col.s12
                            select
                                option(value="", disabled="disabled", selected="selected") Choisir un responsable
                                option(value="1") Utilisateur 1
                                option(value="2") Utilisateur 2
                                option(value="3") Utilisateur 3
                            label Responsable de zone
        div.modal-footer
            a(href="#!").modal-action.modal-close.waves-effect.waves-green.btn-flat.red-text annuler
            button(type="submit", name="add", form="add-zone-form").btn.waves-effect.waves-light.modal-action.modal-close valider
                i.material-icons.right send

    //MODIFY MODAL ZONE
    div(id="modalModifyZone").modal.modal-fixed-footer.modal-edit-zone
        div.modal-content
            h4 Modifier
            div.row
                form#edit-zone-form.col.s12
                    div.row
                        div.input-field.col.s12
                            input(id="zone-edit-id", name="zone-edit-id", type="text", disabled="disabled").validate
                            label(for="zone-edit-id", id="zone-edit-id-label", disabled="disabled") Id
                    div.row
                        div.input-field.col.s12
                            input(id="zone-edit-name", name="zone-edit-name", type="text").validate
                            label(for="zone-edit-name", id="zone-edit-name-label") Nom
        div.modal-footer
            a(href="#!").modal-action.modal-close.waves-effect.waves-green.btn-flat.red-text annuler
            button(onclick=`updateZone(document.getElementById('zone-edit-id').value,document.getElementById('zone-edit-name').value)`).btn.waves-effect.waves-light.modal-action.modal-close sauvegarder
                i.material-icons.right done

