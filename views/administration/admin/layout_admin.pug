doctype html
html
    head
        title= title
        link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css')
        link(rel='stylesheet', href="https://fonts.googleapis.com/icon?family=Material+Icons")
        link(rel='stylesheet', href='/stylesheets/style.css')
        link(rel='stylesheet', href='/stylesheets/administration.css')
        link(rel='stylesheet', href='/stylesheets/components.css')
        link(rel='stylesheet', href='https://cdn.datatables.net/v/dt/dt-1.10.16/b-1.4.2/b-colvis-1.4.2/b-flash-1.4.2/cr-1.4.1/fc-3.2.3/fh-3.1.3/kt-2.3.2/r-2.2.0/rg-1.0.2/rr-1.2.3/sc-1.4.3/sl-1.2.3/datatables.min.css')
    body
        header
            ul.side-nav.fixed.ebony-clay#mobile-demo
                    li
                        div.user-view
                            div.background
                            a
                                img.circle(src="../../images/user.png")
                            a
                                span.white-text.username #{session.username}
                            a
                                span.white-text.email #{session.email}

                    if(session.idRole == 1)
                        li
                            a(href="/administration/admin/zone").white-text.scroll-to  Zones
                                i.material-icons.white-text landscape
                    if(session.idRole == 1 || session.idRole == 2)
                        li
                            a(href="/administration/admin/lines").white-text.scroll-to  Lignes
                                i.material-icons.white-text timeline
                    if(session.idRole == 1)
                        li
                            a(href="/administration/admin/users").white-text.scroll-to  Utilisateurs
                                i.material-icons.white-text people
                    if(session.idRole == 1 || session.idRole == 2 || session.idRole == 3)
                        li
                            a(href="/administration/admin/bookings").white-text.scroll-to  Réservations
                                i.material-icons.white-text view_list
                    if(session.idRole == 1 || session.idRole == 2)
                        li
                            a(href="/administration/admin/statistics").white-text.scroll-to  Statistiques
                                i.material-icons.white-text multiline_chart
                    li
                        a(href="/login/logout").white-text.scroll-to.red-text Se déconnecter
                            i.material-icons.red-text power_settings_new

        nav.amber.lighten-3
            div.nav-wrapper
                div.container
                    a(href="#").brand-logo.center
                        span.resabike res
                        | abike
                    a(href="#", data-activates="mobile-demo").button-collapse
                        i.material-icons menu
        main
            block content

        footer.page-footer.amber.lighten-3
            div.container
                div.row
                    div.col.s6
                        p Copyright Text
                    div.col.s6
                        a(href="https://www.facebook.com/groups/337136043113172/").grey-text.text-lighten-4.right Facebook

        script(src='https://code.jquery.com/jquery-3.2.1.min.js', type="text/javascript")
        script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.16.0/jquery.validate.js', type="text/javascript")
        script(src='https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js', type="text/javascript")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/superagent/3.6.0/superagent.min.js", type="text/javascript")
        script(src='/javascripts/side-nav.js', type="text/javascript")
        script(src='/javascripts/autocomplete.js', type="text/javascript")
        script(src='/javascripts/administration.js', type="text/javascript")
        script(src='/javascripts/administration/zone-rest.js', type="text/javascript")
        script(src='/javascripts/administration/user-rest.js', type="text/javascript")
        script(src='/javascripts/administration/line-rest.js', type="text/javascript")
        script(src='/javascripts/administration/booking-rest.js', type="text/javascript")
        script(src='/javascripts/components/toast.js', type="text/javascript")
        script(src='/javascripts/components/validate.js', type="text/javascript")
        script(src='/javascripts/components/search-it.min.js', type="text/javascript")
