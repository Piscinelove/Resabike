html
  head
    title= title
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css')
    link(rel='stylesheet', href="https://fonts.googleapis.com/icon?family=Material+Icons")
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    nav.amber.lighten-2
      div.nav-wrapper
        div.container
          a(href="#").brand-logo
            span.resabike res
            | abike
          a(href="#", data-activates="mobile-demo").button-collapse
            i.material-icons menu
          ul#nav-mobile.right.hide-on-med-and-down
            li
              a(href="#home") Home
            li
              a(href="#about") Histoire
            li
              a(href="#book") Réservation
            li
              a(href="#contact") Contact
            li
              a(href="#loginPop").modal-trigger Login
          ul.side-nav#mobile-demo
            li
              a(href="#home") Home
            li
              a(href="#about") Histoire
            li
              a(href="#book") Réservation
            li
              a(href="#contact") Contact
            li
              a(href="#loginPop").modal-trigger Login

    block content

    div#loginPop.modal
      div.modal-content
        h4 Login
          div.input-field
              input(id="utilisateur" type="text").validate
              label(for="utilisateur") Utilisateur
          div.input-field
              input(id="psw" type="text").validate
              label(for="psw") Mot de passe
        div.modal-footer
          a(href="#!").modal-action.modal-close.waves-effect.waves-green.btn-flat Annuler
          a(href="#!").modal-action.modal-close.waves-effect.waves-green.btn-flat Se connecter




    footer.page-footer.amber.lighten-2
      div.container
        div.row
          div.col.s6
            p Copyright Text
          div.col.s6
            a(href="https://www.facebook.com/groups/337136043113172/").grey-text.text-lighten-4.right Facebook



